<vm>
  <name>worker</name>
  <cluster>
    <name>Default</name>
  </cluster>
  <template>
    <name>Blank</name>
  </template>
  <memory>__WORKER_MEMORY__</memory>
  <memory_policy>
    <guaranteed>__WORKER_MEMORY_MIN__</guaranteed>
  </memory_policy>
  <cpu>
    <topology>
      <sockets>__WORKER_CPUS__</sockets>
    </topology>
  </cpu>
  <os>
    <boot>
      <devices>
        <device>hd</device>
        <device>network</device>
        <device>cdrom</device>
      </devices>
    </boot>
    <type>other_linux_kernel_4</type>
  </os>
  <placement_policy>
    <affinity>pinned</affinity>
  </placement_policy>
  <custom_properties>
    <custom_property>
      <name>localdisk</name>
      <value>lvmthin</value>
    </custom_property>
  </custom_properties>
</vm>


